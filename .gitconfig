[user]
  name = lgick
  email = lgick@yandex.ru
[merge]
  tool = vimdiff
[color]
  ui = true
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  push = push --follow-tags
  br = branch --format='%(HEAD) %(color:blue)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
  lg = !git log --pretty=format:\"%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(dim green)(%cr) [%an]\" --abbrev-commit -30
  lg1 = !git log --pretty=format:'%h : %s' --graph
[core]
  editor = vim
  excludesFile = ~/.gitignore_global
  ignorecase = false
[push]
  default = matching
[pull]
[oh-my-zsh]
 hide-status = 1
